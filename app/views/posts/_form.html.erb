<%= form_for @post do |f| %>
    Title: <br><%= f.text_field :title %><br><br>
    Content: <br><%= f.text_area :content %><br>
    <br>
    Choose a Category:
    <br>
        <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %> 
        <br>
        <br>
    Or Create a New Category:
    <br>
        <%= f.fields_for :categories, @post.categories.build do |c| %>
            <%= c.text_field :name %>
        <% end %>
    <%= f.submit %>
<% end %>
